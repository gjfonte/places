<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview"
    android:paddingBottom="@dimen/list_view_vertical_margin"
    android:paddingLeft="@dimen/list_view_horizontal_margin"
    android:paddingRight="@dimen/list_view_horizontal_margin"
    android:paddingTop="@dimen/list_view_vertical_margin" >

    <!-- Thumbnail and Photo -->

    <LinearLayout
        android:id="@+id/listViewRowCountryThumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4sp"
        android:background="@drawable/picture_border"
        android:padding="2sp" >

        <ImageView
            android:id="@+id/listViewRowCountryPhoto"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Photo"
            android:src="@drawable/ic_picture" />
    </LinearLayout>

    <!-- Data -->

    <TextView
        android:id="@+id/listViewRowCountryDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listViewRowCountryThumbnail"
        android:layout_toRightOf="@+id/listViewRowCountryThumbnail"
        android:text="Design"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/listViewRowCountryNumPlaces"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewRowCountryDesign"
        android:layout_below="@+id/listViewRowCountryDesign"
        android:layout_marginTop="8dip"
        android:text="Total"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>